{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@test-filereplacements/components": ["shared/components/src/index.ts"],
      "@test-filereplacements/config": ["config/src/index.ts"],
      "@test-filereplacements/injection-tokens": [
        "shared/injection-tokens/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
